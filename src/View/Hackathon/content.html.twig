<section>
    <div class="row largeur">

        {% for candy in candies %}
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3 m-b-35 block-article" id="bonbonDex">
            <div class="block2">
                <div class="block2-pic hov-img0">
                        <img src="{{ candy.image_url }}" alt="Image de l'article {{ candy.product_name }}" class="image-article" >
                </div>
                <div class="block2-txt flex-w flex-t p-t-14">
                    <div class="block2-txt-child1 flex-col-l ">

                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-dark center" data-toggle="modal" data-target="#exampleModal{{ loop.index }}">
                                {{ candy.product_name }}
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal{{ loop.index }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <img class="offset-1" src="{{ candy.image_url }}" alt="image du produit">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                            C'est bon les bonbons
                                            </div>

                                            <hr />

                                            <div class="row">
                                                Où me trouver ?
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-warning" data-dismiss="modal">J'y vais!</button>
                                            <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    <p class="t-center">J'en ai un</p>
                    </div>
                </div>
            </div>
        </div>

        {% endfor %}
    </div>
</section>

<section id="map">
    <div class="container formcenter p-tb-150 p-b-150">
        <form method="post" action="" enctype="multipart/form-data">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label for="productName">Point de départ :</label>
                        <input type="text" name="name" class="form-control" id="productName" value="toto" required>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>


